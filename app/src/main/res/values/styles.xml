<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">#060606</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>
    <style name="btn">
        <item name="android:textSize" >@dimen/btnTextsize</item>
        <item name="android:background">#534c4c</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:text">"	&#63;"</item>
        <item name="android:layout_marginBottom">@dimen/btnMgBottom</item>
        <item name="android:layout_marginLeft">@dimen/btnMg</item>
        <item name="android:layout_marginRight">@dimen/btnMg</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="screenCal">
        <item name="android:textSize" >@dimen/scClacTextSize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">#ade774</item>
        <item name="android:paddingLeft">@dimen/scPg</item>
        <item name="android:gravity">top|left</item>
        <item name="android:text">0</item>
        <item name="android:layout_marginTop">@dimen/scMg</item>
        <item name="android:layout_marginLeft">@dimen/scMg</item>
        <item name="android:layout_marginRight">@dimen/scMg</item>
    </style>
    <style name="screenRes">
        <item name="android:textSize" >@dimen/scResTextSize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">#ade774</item>
        <item name="android:gravity">bottom|right</item>
        <item name="android:text">0.0</item>
        <item name="android:paddingRight">@dimen/scPg</item>
        <item name="android:layout_marginLeft">@dimen/scMg</item>
        <item name="android:layout_marginRight">@dimen/scMg</item>
        <item name="android:layout_marginBottom">@dimen/scMg</item>

    </style>

</resources>
